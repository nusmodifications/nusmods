{
  "extends": [
    "config:base",
    "schedule:earlyMondays",
    "group:babel6Monorepo",
    "group:reactMonorepo",
    "group:linters",
    "group:jestMonorepo",
    "group:lodashMonorepo",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":automergeLinters",
    ":prConcurrentLimit10",
    ":preserveSemverRanges",
    ":label(dependencies)",
    ":timezone(Asia/Singapore)"
  ],
  "packageRules": [
    {
      "description": "Group Webpack-related packages together",
      "packagePatterns": ["-loader$", "webpack"],
      "excludePackageNames": ["react-hot-loader"],
      "groupName": "webpack"
    },
    {
      "description": "Group material-components-web monorepo packages together",
      "packagePatterns": ["^@material/"],
      "groupName": "material monorepo"
    }
  ],
  "ignoreDeps": [
    "stylelint",
    "webpack",
    "webpack-dev-server",
    "optimize-css-assets-webpack-plugin",
    "flow-bin"
  ]
}
