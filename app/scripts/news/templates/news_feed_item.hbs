<div class="row">
  <div class="col-md-2 text-right nm-news-post-date">
    <strong class="nm-news-post-day">{{date}}</strong><span class="hidden-xs"><br></span>
    <span class="nm-news-post-month">{{month}}</span>
  </div>
  <div class="col-md-10">
    <div class="nm-news-post-content">
      {{#if object_id}}
        <img class="img-responsive" src="https://graph.facebook.com/{{object_id}}/picture">
      {{/if}}
      <div class="nm-news-post-message-container">
        {{#if message }}
          <p class="nm-news-post-message-content">
            {{#if shortMessage}}
              {{{shortMessage}}} <span class="nm-news-post-full-message">{{{fullMessage}}}</span>
              <span class="nm-news-post-see-more">... <a class="js-nm-news-post-see-more">See More</a></span>
            {{else}}
              {{{message}}}
            {{/if}}
          </p>
        {{/if}}
        <div>
          {{#if comments}}
            <a class="js-nm-news-toggle-comments">Show {{comments.data.length}} comment{{#notequals comments.data.length 1}}s{{/notequals}}</a>
          {{else}}
            <span class="highlight thin">No comments</span>
          {{/if}}
          <span class="highlight thin">&middot;</span>
          <a href="{{postUrl}}" target="_blank">View on Facebook</a>
        </div>          
      </div>
    </div>
    <div class="nm-news-comments js-nm-news-comments">
      {{#if comments}}
        <ul class="list-group">
          {{#each comments.data}}
            <li class="list-group-item">
              <div class="media">
                <a class="media-left" target="_blank" href="https://www.facebook.com/{{from.id}}">
                  <img class="img-rounded" src="https://graph.facebook.com/{{from.id}}/picture?type=square" alt="{{from.name}} Thumbnail">
                </a>
                <div class="media-body">
                  <h5 class="media-heading">
                    <a target="_blank" href="https://www.facebook.com/{{from.id}}"><strong>{{from.name}}</strong></a>  &middot; <span class="nm-news-comment-date">{{date}}</span>
                  </h5>
                  <p class="nm-news-comment">{{{message}}}</p>
                  <div class="nm-news-comment-meta">
                    {{#if like_count}}
                      <span><i class="fa fa-heart"></i> {{like_count}}</span>
                    {{/if}}
                  </div>
                  {{#each comments.data}}
                    <div class="media">
                      <a class="media-left" target="_blank" href="https://www.facebook.com/{{from.id}}">
                        <img class="img-rounded" src="https://graph.facebook.com/{{from.id}}/picture?type=square" alt="{{from.name}} Thumbnail">
                      </a>
                      <div class="media-body">
                        <h5 class="media-heading">
                          <a target="_blank" href="https://www.facebook.com/{{from.id}}"><strong>{{from.name}}</strong></a> &middot; <span class="nm-news-comment-date">{{date}}</span>
                        </h5>
                        <p>{{{message}}}</p>
                        <div class="nm-news-comment-meta">
                          {{#if like_count}}
                            <span><i class="fa fa-heart"></i> {{like_count}}</span>
                          {{/if}}
                        </div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>
